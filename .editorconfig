# EditorConfig - Padronização de formatação entre editores
# https://editorconfig.org

root = true

# Configurações gerais
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos C++
[*.{cpp,h,hpp,cc,cxx}]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120

# Arquivos C#
[*.cs]
indent_style = space
indent_size = 4

# Arquivos Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Arquivos YAML/JSON
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Arquivos de configuração
[*.{ini,config}]
indent_style = tab
indent_size = 4

# Arquivos Python (se houver scripts)
[*.py]
indent_style = space
indent_size = 4

# Arquivos gerados pelo Unreal (não formatar)
[Intermediate/**]
indent_style = unset

[Binaries/**]
indent_style = unset

[DerivedDataCache/**]
indent_style = unset

[Saved/**]
indent_style = unset

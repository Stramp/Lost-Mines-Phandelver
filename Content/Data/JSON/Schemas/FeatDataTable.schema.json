{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FeatDataTable",
  "description": "Schema para FeatDataTable - Feats D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição do feat (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^(FEAT|Feat)_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único do feat (deve começar com FEAT_ ou Feat_)",
        "examples": [
          "FEAT_Alert",
          "Feat_Athlete",
          "FEAT_Actor"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição do feat"
      },
      "LevelUnlocked": {
        "type": "integer",
        "minimum": 1,
        "maximum": 20,
        "description": "Nível mínimo para desbloquear o feat (geralmente 4)"
      },
      "FeatureType": {
        "type": "string",
        "enum": [
          "Feat"
        ],
        "description": "Tipo da feature (sempre Feat para feats)"
      },
      "FeatureData": {
        "type": "object",
        "description": "Dados específicos do feat (estrutura flexível)",
        "additionalProperties": true
      },
      "AvailableChoices": {
        "type": "array",
        "description": "Opções de escolha disponíveis (geralmente vazio para feats)",
        "items": {
          "type": "object"
        }
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Feat\\."
        }
      }
    },
    "additionalProperties": false
  }
}
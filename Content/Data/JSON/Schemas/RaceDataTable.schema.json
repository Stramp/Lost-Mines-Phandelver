{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RaceDataTable",
  "description": "Schema para RaceDataTable - Raças e sub-raças D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Name", "ID", "SchemaVersion", "DataVersion"],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da raça (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^RACE_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da raça (deve começar com RACE_)",
        "examples": ["RACE_Elf", "RACE_Dwarf", "RACE_Human"]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da raça"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Race\\."
        }
      },
      "AbilityScoreImprovements": {
        "type": "array",
        "description": "Melhorias de atributos da raça",
        "items": {
          "type": "object",
          "required": ["AbilityID", "Bonus"],
          "properties": {
            "AbilityID": {
              "type": "string",
              "pattern": "^ABL_[A-Z][a-zA-Z0-9_]*$",
              "description": "ID do atributo que recebe bônus"
            },
            "Bonus": {
              "type": "integer",
              "description": "Valor do bônus (geralmente 1 ou 2)"
            }
          },
          "additionalProperties": false
        }
      },
      "Size": {
        "type": "string",
        "enum": ["Small", "Medium", "Large"],
        "description": "Tamanho da raça"
      },
      "BaseSpeed": {
        "type": "integer",
        "description": "Velocidade base da raça (geralmente 25 ou 30)"
      },
      "TraitHandles": {
        "type": "array",
        "description": "Referências type-safe para traits",
        "items": {
          "type": "object",
          "required": ["DataTable", "RowName"],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/TraitDataTable$",
              "description": "Caminho da Data Table de traits"
            },
            "RowName": {
              "type": "string",
              "pattern": "^TR_[A-Z][a-zA-Z0-9_]*$",
              "description": "Nome da row (ID do trait)"
            }
          },
          "additionalProperties": false
        }
      },
      "LanguageHandles": {
        "type": "array",
        "description": "Referências type-safe para idiomas",
        "items": {
          "type": "object",
          "required": ["DataTable", "RowName"],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/LanguageDataTable$",
              "description": "Caminho da Data Table de idiomas"
            },
            "RowName": {
              "type": "string",
              "pattern": "^PL_[A-Z][a-zA-Z0-9_]*$",
              "description": "Nome da row (ID do idioma)"
            }
          },
          "additionalProperties": false
        }
      },
      "SubraceHandles": {
        "type": "array",
        "description": "Referências type-safe para sub-raças",
        "items": {
          "type": "object",
          "required": ["DataTable", "RowName"],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/RaceDataTable$",
              "description": "Caminho da Data Table de raças"
            },
            "RowName": {
              "type": "string",
              "pattern": "^RACE_[A-Z][a-zA-Z0-9_]*$",
              "description": "Nome da row (ID da sub-raça)"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillDataTable",
  "description": "Schema para SkillDataTable - Skills D&D 5e (Acrobatics, Athletics, etc.)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da skill (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^PSK_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da skill (deve começar com PSK_)",
        "examples": [
          "PSK_Acrobatics",
          "PSK_Athletics",
          "PSK_Stealth"
        ]
      },
      "AbilityID": {
        "type": "string",
        "pattern": "^ABL_[A-Z][a-zA-Z0-9_]*$",
        "description": "ID do atributo associado à skill",
        "examples": [
          "ABL_Dexterity",
          "ABL_Strength"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da skill"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
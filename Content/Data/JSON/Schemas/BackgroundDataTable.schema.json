{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BackgroundDataTable Schema",
  "description": "Schema para validar BackgroundDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "Description",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome do background (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único do background",
        "pattern": "^BG_[A-Z][a-zA-Z0-9_]*$"
      },
      "Description": {
        "type": "string",
        "description": "Descrição do background (localizável)"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "SkillProficiencyHandles": {
        "type": "array",
        "description": "Handles para proficiências de skills",
        "items": {
          "type": [
            "object",
            "null"
          ],
          "description": "Referência a uma row em uma Data Table",
          "properties": {
            "DataTable": {
              "type": "string",
              "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
            },
            "RowName": {
              "type": "string",
              "description": "Nome da row na Data Table"
            }
          },
          "required": [
            "DataTable",
            "RowName"
          ],
          "additionalProperties": false
        }
      },
      "LanguageHandles": {
        "type": "array",
        "description": "Handles para idiomas conhecidos",
        "items": {
          "type": [
            "object",
            "null"
          ],
          "description": "Referência a uma row em uma Data Table",
          "properties": {
            "DataTable": {
              "type": "string",
              "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
            },
            "RowName": {
              "type": "string",
              "description": "Nome da row na Data Table"
            }
          },
          "required": [
            "DataTable",
            "RowName"
          ],
          "additionalProperties": false
        }
      },
      "LanguageChoices": {
        "type": "object",
        "description": "Escolhas de idiomas disponíveis",
        "properties": {
          "Count": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "Count"
        ],
        "additionalProperties": false
      },
      "Equipment": {
        "type": "array",
        "description": "Array de IDs de equipamentos",
        "items": {
          "type": "string"
        }
      },
      "TraitHandle": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência a uma row em uma Data Table",
        "properties": {
          "DataTable": {
            "type": "string",
            "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
          },
          "RowName": {
            "type": "string",
            "description": "Nome da row na Data Table"
          }
        },
        "required": [
          "DataTable",
          "RowName"
        ],
        "additionalProperties": false
      },
      "TraitDescription": {
        "type": "string",
        "description": "Descrição do trait do background"
      }
    },
    "additionalProperties": false
  }
}
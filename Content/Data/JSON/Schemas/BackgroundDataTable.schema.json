{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BackgroundDataTable",
  "description": "Schema para BackgroundDataTable - Backgrounds D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição do background (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^BG_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único do background (deve começar com BG_)",
        "examples": [
          "BG_Acolyte",
          "BG_Criminal",
          "BG_FolkHero"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição do background"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Background\\."
        }
      },
      "SkillProficiencyHandles": {
        "type": "array",
        "description": "Referências type-safe para skills",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/SkillDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^PSK_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "LanguageHandles": {
        "type": "array",
        "description": "Referências type-safe para idiomas",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/LanguageDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^PL_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "LanguageChoices": {
        "type": "object",
        "description": "Opções de escolha de idiomas",
        "properties": {
          "Count": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantidade de idiomas que podem ser escolhidos"
          }
        },
        "additionalProperties": false
      },
      "Equipment": {
        "type": "array",
        "description": "Equipamentos do background (IDs de itens)",
        "items": {
          "type": "string"
        }
      },
      "FeatureHandle": {
        "type": "object",
        "description": "Referência type-safe para feature do background",
        "required": [
          "DataTable",
          "RowName"
        ],
        "properties": {
          "DataTable": {
            "type": "string",
            "pattern": "^(/Game/Data/TraitDataTable|/Game/Data/FeatureDataTable)$"
          },
          "RowName": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "FeatureDescription": {
        "type": "string",
        "description": "Descrição da feature do background"
      }
    },
    "additionalProperties": false
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClassDataTable",
  "description": "Schema para ClassDataTable - Classes D&D 5e e progressão",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da classe (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^CLASS_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da classe (deve começar com CLASS_)",
        "examples": [
          "CLASS_Fighter",
          "CLASS_Wizard",
          "CLASS_Cleric"
        ]
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Class\\."
        }
      },
      "ClassName": {
        "type": "string",
        "description": "Nome da classe (ex: Fighter, Wizard)"
      },
      "HitDie": {
        "type": "integer",
        "enum": [
          6,
          8,
          10,
          12
        ],
        "description": "Dado de vida da classe (6, 8, 10 ou 12)"
      },
      "MulticlassRequirementGroups": {
        "type": "array",
        "description": "Requisitos de atributo para multiclasse (estrutura normalizada)",
        "items": {
          "type": "object",
          "required": [
            "Operator",
            "Requirements"
          ],
          "properties": {
            "Operator": {
              "type": "string",
              "enum": [
                "OR",
                "AND"
              ],
              "description": "Operador lógico: OR (qualquer um) ou AND (todos)"
            },
            "Requirements": {
              "type": "array",
              "description": "Lista de requisitos individuais",
              "items": {
                "type": "object",
                "required": [
                  "AbilityID",
                  "Value"
                ],
                "properties": {
                  "AbilityID": {
                    "type": "string",
                    "pattern": "^ABL_[A-Z][a-zA-Z0-9_]*$",
                    "description": "ID do atributo requerido (ex: ABL_Strength, ABL_Dexterity)"
                  },
                  "Value": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 30,
                    "description": "Valor mínimo requerido do atributo"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "MulticlassRequirements": {
        "type": "array",
        "description": "Requisitos de atributo para multiclasse (formato antigo - deprecated, mantido para compatibilidade)",
        "items": {
          "type": "string",
          "pattern": "^[A-Z]{3}/\\d+([|&][A-Z]{3}/\\d+)*$",
          "description": "Formato: STR/13|DEX/13 (OR) ou STR/13&DEX/13 (AND)"
        }
      },
      "WeaponProficiencyHandles": {
        "type": "array",
        "description": "Referências type-safe para proficiências com armas",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/ProficiencyDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^PW_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "ArmorProficiencyHandles": {
        "type": "array",
        "description": "Referências type-safe para proficiências com armaduras",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/ProficiencyDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^(PA|PS)_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "SavingThrowHandles": {
        "type": "array",
        "description": "Referências type-safe para saving throws (Ability Scores)",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/AbilityScoreDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^ABL_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "AvailableSkillHandles": {
        "type": "array",
        "description": "Referências type-safe para skills disponíveis",
        "items": {
          "type": "object",
          "required": [
            "DataTable",
            "RowName"
          ],
          "properties": {
            "DataTable": {
              "type": "string",
              "pattern": "^/Game/Data/SkillDataTable$"
            },
            "RowName": {
              "type": "string",
              "pattern": "^PSK_[A-Z][a-zA-Z0-9_]*$"
            }
          },
          "additionalProperties": false
        }
      },
      "SkillChoiceCount": {
        "type": "integer",
        "minimum": 0,
        "description": "Quantidade de skills que podem ser escolhidos"
      },
      "Progression": {
        "type": "array",
        "description": "Progressão de features por nível",
        "items": {
          "type": "object",
          "required": [
            "Level"
          ],
          "properties": {
            "Level": {
              "type": "integer",
              "minimum": 1,
              "maximum": 20,
              "description": "Nível da classe"
            },
            "FeatureHandles": {
              "type": "array",
              "description": "Referências type-safe para features",
              "items": {
                "type": "object",
                "required": [
                  "DataTable",
                  "RowName"
                ],
                "properties": {
                  "DataTable": {
                    "type": "string",
                    "pattern": "^/Game/Data/FeatureDataTable$"
                  },
                  "RowName": {
                    "type": "string",
                    "description": "Nome da row (ID da feature, pode ser FC_* ou outro formato legítimo)"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "StartingEquipment": {
        "type": "array",
        "description": "Equipamentos iniciais (IDs de itens)",
        "items": {
          "type": "string",
          "pattern": "^ITM_[A-Z][a-zA-Z0-9_]*$"
        }
      },
      "StartingGold": {
        "type": "integer",
        "minimum": 0,
        "description": "Ouro inicial alternativo"
      }
    },
    "additionalProperties": false
  }
}
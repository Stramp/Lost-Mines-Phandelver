{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProficiencyDataTable",
  "description": "Schema para ProficiencyDataTable - Proficiências D&D 5e (Armas, Armaduras, Ferramentas)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da proficiência (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^(PW|PA|PS|PT)_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da proficiência (deve começar com PW_, PA_, PS_ ou PT_)",
        "examples": [
          "PW_Simple_Weapons",
          "PA_Light_Armor",
          "PS_Shields",
          "PT_Thieves_Tools"
        ]
      },
      "Type": {
        "type": "string",
        "enum": [
          "Weapon",
          "Armor",
          "Shield",
          "Tool"
        ],
        "description": "Tipo da proficiência"
      },
      "Description": {
        "type": "string",
        "description": "Descrição da proficiência"
      },
      "ProficiencyData": {
        "type": "object",
        "description": "Dados específicos da proficiência (estrutura flexível)",
        "additionalProperties": true
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Proficiency\\."
        }
      }
    },
    "additionalProperties": false
  }
}
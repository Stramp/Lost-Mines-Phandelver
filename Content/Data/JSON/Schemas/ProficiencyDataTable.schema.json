{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProficiencyDataTable Schema",
  "description": "Schema para validar ProficiencyDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "Type",
      "Description",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome da proficiência (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único da proficiência"
      },
      "Type": {
        "type": "string",
        "description": "Tipo da proficiência",
        "enum": [
          "Weapon",
          "Armor",
          "Shield",
          "Tool",
          "Skill",
          "Language"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da proficiência (localizável)"
      },
      "ProficiencyData": {
        "type": "object",
        "description": "Dados estruturados da proficiência",
        "additionalProperties": {
          "type": "string"
        }
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpellDataTable",
  "description": "Schema para SpellDataTable - Magias D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da magia (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^SPL_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da magia (deve começar com SPL_)",
        "examples": [
          "SPL_Firebolt",
          "SPL_Fireball",
          "SPL_MagicMissile"
        ]
      },
      "SpellLevel": {
        "type": "integer",
        "minimum": 0,
        "maximum": 9,
        "description": "Nível da magia (0 = cantrip, 1-9 = spell level)"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Spell\\."
        }
      },
      "SchoolReference": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência type-safe para escola de magia",
        "properties": {
          "DataTable": {
            "type": "string",
            "pattern": "^/Game/Data/SpellSchoolDataTable$"
          },
          "RowName": {
            "type": "string",
            "pattern": "^SCH_[A-Z][a-zA-Z0-9_]*$"
          }
        },
        "additionalProperties": false
      },
      "DamageTypeReference": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência type-safe para tipo de dano (pode ser null)",
        "properties": {
          "DataTable": {
            "type": "string",
            "pattern": "^/Game/Data/DamageTypeDataTable$"
          },
          "RowName": {
            "type": "string",
            "pattern": "^DMG_[A-Z][a-zA-Z0-9_]*$"
          }
        },
        "additionalProperties": false
      },
      "Description": {
        "type": "string",
        "description": "Descrição da magia"
      },
      "SpellData": {
        "type": "object",
        "description": "Dados específicos da magia (Range, CastingTime, Components, Duration, Damage, etc.)",
        "additionalProperties": true
      }
    },
    "additionalProperties": false
  }
}
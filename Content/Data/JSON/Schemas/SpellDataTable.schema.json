{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpellDataTable Schema",
  "description": "Schema para validar SpellDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "SpellLevel",
      "Description",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome da magia (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único da magia",
        "pattern": "^SPL_[A-Z][a-zA-Z0-9_]*$"
      },
      "SpellLevel": {
        "type": "integer",
        "description": "Nível da magia (0 = Cantrip, 1-9 = Spell Level)",
        "minimum": 0,
        "maximum": 9
      },
      "SchoolReference": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência a uma row em uma Data Table",
        "properties": {
          "DataTable": {
            "type": "string",
            "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
          },
          "RowName": {
            "type": "string",
            "description": "Nome da row na Data Table"
          }
        },
        "required": [
          "DataTable",
          "RowName"
        ],
        "additionalProperties": false
      },
      "DamageTypeReference": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência a uma row em uma Data Table",
        "properties": {
          "DataTable": {
            "type": "string",
            "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
          },
          "RowName": {
            "type": "string",
            "description": "Nome da row na Data Table"
          }
        },
        "required": [
          "DataTable",
          "RowName"
        ],
        "additionalProperties": false
      },
      "Description": {
        "type": "string",
        "description": "Descrição da magia (localizável)"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "SpellData": {
        "type": "object",
        "description": "Dados estruturados da magia (Range, Components, Duration, etc.)",
        "properties": {
          "Range": {
            "type": "string"
          },
          "Components": {
            "type": "string"
          },
          "MaterialComponents": {
            "type": "string"
          },
          "Duration": {
            "type": "string"
          },
          "CastingTime": {
            "type": "string"
          },
          "Ritual": {
            "type": "string",
            "enum": [
              "true",
              "false"
            ]
          },
          "Concentration": {
            "type": "string",
            "enum": [
              "true",
              "false"
            ]
          }
        },
        "additionalProperties": true
      }
    },
    "additionalProperties": false
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpellSchoolDataTable",
  "description": "Schema para SpellSchoolDataTable - Escolas de magia D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da escola (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^SCH_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da escola (deve começar com SCH_)",
        "examples": [
          "SCH_Evocation",
          "SCH_Abjuration",
          "SCH_Conjuration"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da escola de magia"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
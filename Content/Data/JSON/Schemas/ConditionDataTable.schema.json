{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConditionDataTable Schema",
  "description": "Schema para validar ConditionDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "Description",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome da condição (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único da condição",
        "pattern": "^COND_[A-Z][a-zA-Z0-9_]*$"
      },
      "Description": {
        "type": "string",
        "description": "Descrição da condição (localizável)"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
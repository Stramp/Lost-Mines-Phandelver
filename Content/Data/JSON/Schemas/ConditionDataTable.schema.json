{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConditionDataTable",
  "description": "Schema para ConditionDataTable - Condições D&D 5e (Poisoned, Charmed, etc.)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da condição (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^COND_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da condição (deve começar com COND_)",
        "examples": [
          "COND_Poisoned",
          "COND_Charmed",
          "COND_Blinded"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da condição"
      },
      "ConditionData": {
        "type": "object",
        "description": "Dados específicos da condição (estrutura flexível)",
        "additionalProperties": true
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
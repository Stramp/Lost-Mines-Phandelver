{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AbilityScoreDataTable Schema",
  "description": "Schema para validar AbilityScoreDataTable.json com formato correto de TypeTags para Unreal Engine",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Name", "ID", "Abbreviation", "Description", "TypeTags"],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome do atributo (Key Field para Unreal Engine)",
        "examples": ["Strength", "Dexterity", "Constitution"]
      },
      "ID": {
        "type": "string",
        "description": "ID único do atributo",
        "pattern": "^ABL_[A-Z][a-zA-Z0-9_]*$",
        "examples": ["ABL_Strength", "ABL_Dexterity", "ABL_Constitution"]
      },
      "Abbreviation": {
        "type": "string",
        "description": "Abreviação do atributo",
        "pattern": "^[A-Z]{2,4}$",
        "examples": ["STR", "DEX", "CON", "INT", "WIS", "CHA"]
      },
      "Description": {
        "type": "string",
        "description": "Descrição do atributo (localizável)"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização - formato correto para importação no Unreal Engine",
        "required": ["GameplayTags"],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["TagName"],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag",
                  "pattern": "^Ability\\.[A-Z][a-zA-Z0-9_]*$",
                  "examples": ["Ability.Physical", "Ability.Mental"]
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}

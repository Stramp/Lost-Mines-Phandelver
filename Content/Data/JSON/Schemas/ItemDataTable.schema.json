{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItemDataTable Schema",
  "description": "Schema para validar ItemDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "ItemType",
      "Description",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome do item (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único do item",
        "pattern": "^ITM_[A-Z]{3}_[A-Z][a-zA-Z0-9_]*$"
      },
      "ItemType": {
        "type": "string",
        "description": "Tipo do item",
        "enum": [
          "Weapon",
          "Armor",
          "Tool",
          "Consumable",
          "Pack",
          "Other",
          "Gold"
        ]
      },
      "Weight": {
        "type": "number",
        "description": "Peso do item em libras",
        "minimum": 0
      },
      "Value": {
        "type": "integer",
        "description": "Valor do item em ouro (gp)",
        "minimum": 0
      },
      "Description": {
        "type": "string",
        "description": "Descrição do item (localizável)"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "SpellHandle": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência a uma row em uma Data Table",
        "properties": {
          "DataTable": {
            "type": "string",
            "description": "Caminho da Data Table (ex: /Game/Data/DataTable/SpellDataTable)"
          },
          "RowName": {
            "type": "string",
            "description": "Nome da row na Data Table"
          }
        },
        "required": [
          "DataTable",
          "RowName"
        ],
        "additionalProperties": false
      },
      "DamageTypeID": {
        "type": [
          "string",
          "null"
        ],
        "description": "ID do tipo de dano para armas"
      },
      "IconTexture": {
        "type": [
          "string",
          "null"
        ],
        "description": "Referência ao ícone do item"
      },
      "MeshReference": {
        "type": [
          "string",
          "null"
        ],
        "description": "Referência ao mesh 3D do item"
      }
    },
    "additionalProperties": false
  }
}
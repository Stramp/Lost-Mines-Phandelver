{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItemDataTable",
  "description": "Schema para ItemDataTable - Itens D&D 5e (Armas, Armaduras, Equipamentos)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição do item (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^ITM_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único do item (deve começar com ITM_)",
        "examples": [
          "ITM_ARM_ChainMail",
          "ITM_ARM_Shield",
          "ITM_WPN_Longsword"
        ]
      },
      "ItemType": {
        "type": "string",
        "enum": [
          "Armor",
          "Weapon",
          "Tool",
          "Consumable",
          "Other"
        ],
        "description": "Tipo do item"
      },
      "Weight": {
        "type": "number",
        "minimum": 0,
        "description": "Peso do item em libras"
      },
      "Value": {
        "type": "integer",
        "minimum": 0,
        "description": "Valor do item em peças de ouro (gp)"
      },
      "Description": {
        "type": "string",
        "description": "Descrição do item"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Item\\."
        }
      },
      "IconTexture": {
        "type": [
          "string",
          "null"
        ],
        "description": "Caminho para textura do ícone (TSoftObjectPtr, pode ser null)"
      },
      "MeshReference": {
        "type": [
          "string",
          "null"
        ],
        "description": "Caminho para mesh 3D (TSoftObjectPtr, pode ser null)"
      },
      "SpellHandle": {
        "type": [
          "object",
          "null"
        ],
        "description": "Referência type-safe para spell (para itens mágicos, pode ser null)",
        "properties": {
          "DataTable": {
            "type": "string",
            "pattern": "^/Game/Data/SpellDataTable$"
          },
          "RowName": {
            "type": "string",
            "pattern": "^SPL_[A-Z][a-zA-Z0-9_]*$"
          }
        },
        "additionalProperties": false
      },
      "DamageTypeID": {
        "type": [
          "string",
          "null"
        ],
        "pattern": "^DMG_[A-Z][a-zA-Z0-9_]*$",
        "description": "ID do tipo de dano (para armas, pode ser null)"
      }
    },
    "additionalProperties": false
  }
}
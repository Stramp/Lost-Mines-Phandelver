{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FeatureDataTable",
  "description": "Schema para FeatureDataTable - Features de classe D&D 5e",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição da feature (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^FC_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único da feature (deve começar com FC_)",
        "examples": [
          "FC_SecondWind",
          "FC_FightingStyle",
          "FC_ActionSurge"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição da feature"
      },
      "LevelUnlocked": {
        "type": "integer",
        "minimum": 1,
        "maximum": 20,
        "description": "Nível em que a feature é desbloqueada"
      },
      "FeatureType": {
        "type": "string",
        "enum": [
          "Automatic",
          "Choice",
          "SubclassSelection"
        ],
        "description": "Tipo da feature"
      },
      "FeatureData": {
        "type": "object",
        "description": "Dados específicos da feature (estrutura flexível)",
        "additionalProperties": true
      },
      "AvailableChoices": {
        "type": "array",
        "description": "Opções de escolha disponíveis",
        "items": {
          "type": "object",
          "required": [
            "ID",
            "Name"
          ],
          "properties": {
            "ID": {
              "type": "string",
              "description": "ID da escolha"
            },
            "Name": {
              "type": "string",
              "description": "Nome de exibição da escolha"
            }
          },
          "additionalProperties": false
        }
      },
      "bAllowMultipleChoices": {
        "type": "boolean",
        "description": "Se permite múltiplas escolhas"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Feature\\."
        }
      }
    },
    "additionalProperties": false
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FeatureDataTable Schema",
  "description": "Schema para validar FeatureDataTable.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Name",
      "ID",
      "Description",
      "LevelUnlocked",
      "FeatureType",
      "TypeTags"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "description": "Nome da feature (Key Field)"
      },
      "ID": {
        "type": "string",
        "description": "ID único da feature",
        "pattern": "^FC_[A-Z][a-zA-Z0-9_]*$"
      },
      "Description": {
        "type": "string",
        "description": "Descrição da feature (localizável)"
      },
      "LevelUnlocked": {
        "type": "integer",
        "description": "Nível em que a feature é desbloqueada",
        "minimum": 1,
        "maximum": 20
      },
      "FeatureType": {
        "type": "string",
        "description": "Tipo da feature",
        "enum": [
          "Automatic",
          "Choice",
          "SubclassSelection",
          "ASI",
          "FeatSelection"
        ]
      },
      "FeatureData": {
        "type": "object",
        "description": "Dados estruturados da feature",
        "additionalProperties": {
          "type": "string"
        }
      },
      "AvailableChoices": {
        "type": "array",
        "description": "Escolhas disponíveis para features",
        "items": {
          "type": "object",
          "required": [
            "ID",
            "Name"
          ],
          "properties": {
            "ID": {
              "type": "string"
            },
            "Name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "bAllowMultipleChoices": {
        "type": "boolean",
        "description": "Permite múltiplas escolhas"
      },
      "TypeTags": {
        "type": "object",
        "description": "Gameplay Tags para categorização",
        "required": [
          "GameplayTags",
          "ParentTags"
        ],
        "properties": {
          "GameplayTags": {
            "type": "array",
            "description": "Array de Gameplay Tags",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "TagName"
              ],
              "properties": {
                "TagName": {
                  "type": "string",
                  "description": "Nome da Gameplay Tag"
                }
              },
              "additionalProperties": false
            }
          },
          "ParentTags": {
            "type": "array",
            "description": "Array de Parent Tags (geralmente vazio)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
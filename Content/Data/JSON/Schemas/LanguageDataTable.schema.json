{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LanguageDataTable",
  "description": "Schema para LanguageDataTable - Idiomas D&D 5e (Common, Elvish, etc.)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição do idioma (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^PL_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único do idioma (deve começar com PL_)",
        "examples": [
          "PL_Common",
          "PL_Elvish",
          "PL_Dwarvish"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição do idioma"
      },
      "Script": {
        "type": "string",
        "description": "Script usado pelo idioma"
      },
      "Type": {
        "type": "string",
        "description": "Tipo do idioma (Standard, Exotic, etc.)"
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
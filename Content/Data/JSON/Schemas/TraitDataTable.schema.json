{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TraitDataTable",
  "description": "Schema para TraitDataTable - Traits reutilizáveis (Darkvision, FeyAncestry, etc.)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "SchemaVersion",
      "DataVersion",
      "Name",
      "ID"
    ],
    "properties": {
      "SchemaVersion": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Versão do schema (formato: MAJOR.MINOR.PATCH, ex: 1.0.0)"
      },
      "DataVersion": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Versão dos dados (formato: YYYY-MM-DD, ex: 2024-12-27)"
      },
      "Name": {
        "type": "string",
        "description": "Nome de exibição do trait (Key Field para Unreal Engine)"
      },
      "ID": {
        "type": "string",
        "pattern": "^TR_[A-Z][a-zA-Z0-9_]*$",
        "description": "Identificador único do trait (deve começar com TR_)",
        "examples": [
          "TR_Darkvision",
          "TR_FeyAncestry",
          "TR_Trance"
        ]
      },
      "Description": {
        "type": "string",
        "description": "Descrição do trait"
      },
      "TraitData": {
        "type": "object",
        "description": "Dados específicos do trait (estrutura flexível)",
        "additionalProperties": true
      },
      "TypeTags": {
        "type": "array",
        "description": "Gameplay Tags para categorização",
        "items": {
          "type": "string",
          "pattern": "^Trait\\."
        }
      },
      "SpellReference": {
        "type": "object",
        "description": "Referência opcional a uma spell",
        "properties": {
          "DataTable": {
            "type": "string",
            "description": "Caminho da Data Table (pode ser vazio)"
          },
          "RowName": {
            "type": "string",
            "description": "Nome da row (pode ser vazio)"
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
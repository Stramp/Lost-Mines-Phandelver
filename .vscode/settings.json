{
  // Configuração para desativar UI especial do Cursor para arquivos .mdc
  // Isso resolve problemas de autogeração e salvamento de regras
  // Baseado em: https://github.com/bmadcode/cursor-rules
  "workbench.editorAssociations": {
    "*.mdc": "default"
  },
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.formatting": "disabled",
  "C_Cpp.errorSquiggles": "disabled"
}
